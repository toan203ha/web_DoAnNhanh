}

<style>
    .main_body {
        display: flex;
        justify-content: space-between;
        color: white;
        margin-top: 50px;
    }

    .body_left {
        display: flex;
        flex-direction: column;
        width: 40%;
    }

    .nav_select ul li {
        border: 1px solid white;
        padding: 5px 10px;
        margin-right: 10px;
        margin-top: 10px;
        border-radius: 10px;
    }

        .nav_select ul li:hover {
            background-color: white;
            color: black;
        }

    .body_right {
        display: flex;
        flex-direction: column;
        width: 50%;
        height: 100%;

    }

    .body_left {
        text-align:center;
        margin:auto;
    }

    .btn_sub_search {
        display: flex;
        margin-top: 30px;
        margin-bottom: 30px;
        padding-left:75px;
    }

    .ul_options {
        display: flex;
        flex-wrap:wrap;
        list-style:none;
        padding-left:130px;
    }

    .ul_options:hover {
        cursor:pointer;
    }

    .card_box {
        width: 150px;
        overflow: hidden;
        border: 0.5px solid grey;
        padding-bottom: 10px;
        border-radius: 10px;
        margin-bottom: 30px;
        position: relative;
        text-decoration:none;
    }

        .card_box:hover {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
        }

        .card_box .name_sp {
            color: black;
            font-weight: bold;
            text-align: center;
            margin-bottom: 5px;
        }

        .card_box .deal_sp {
            color: red;
            text-align: center;
            font-size: 16px
        }

        .card_box .address_sp {
            margin-left: 5px;
            width: 100%;
            overflow: hidden;
        }
    .div_BestSeller {
        background-color: white; 
        height: 600px; 
        border-radius: 10px;
        padding: 10px; 
        overflow-y: scroll;    }
    ::-webkit-scrollbar {
        width: 0;
    }
</style>

