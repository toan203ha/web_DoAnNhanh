<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/c0b1a641d5.js" crossorigin="anonymous"></script>
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        .header {
            display: flex;
            width: 100%;
            justify-content: center;
            background-color: white;
            height: 80px;
        }

            .header .main_header {
                width: 80%;
                display: flex;
                justify-content: space-around;
                align-content: center;
                align-items: center;
            }

        .nav_header {
            text-align: center;
        }

        .nav_list {
            display: flex;
            justify-content: center;
            list-style: none;
            padding: 0;
        }

        .nav_header ul li {
            font-size: 17px;
            margin-right: 100px;
        }

            .nav_header ul li:hover {
                color: orangered;
                cursor: pointer;
            }

        .icon_search {
            font-size: 20px;
            margin-right: 10px;
        }

            .icon_search:hover {
                cursor: pointer;
                color: orangered;
            }

        .fa-user {
            font-size: 20px;
            margin-right: 10px;
            color: black;
        }

            .fa-user:hover {
                cursor: pointer;
                color: orangered;
            }

        .container {
        }

        .ahrf {
            text-decoration: none;
        }

        .option {
            color:black;
            text-decoration:none;
        }

            .option:hover {
                cursor: pointer;
                text-decoration: none;
                color: orangered;
            }
            .option::after {
                color: orangered;
            }
    </style>
</head>
<body>
    <div class="header">
        <div class="main_header">
            <a href="/Home/Index"><img src="https://shopeefood.vn/app/assets/img/shopeefoodvn.png?4aa1a38e8da801f4029b80734905f3f7" style="object-fit:cover; width: 150px" /></a>
            <div class="nav_header">
                <ul style="display: flex;list-style: none; padding-top: 20px;">
                    <li><a href="~/Food/ViewFood" class="option">Đồ ăn</a></li>
                    <li><a href="~/Drinks/ViewDrinks" class="option">Đồ uống</a></li>
                    <li><a href="~/Combo/ViewCombo" class="option">Combo</a></li>
                </ul>
            </div>
            <div class="icon_search">
                <i class="fas fa-search search-icon"></i>
            </div>
            <div class="login-register">
                <a href="/Login/Dangnhap"><i class="fas fa-user"></i></a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>


</body>
</html>